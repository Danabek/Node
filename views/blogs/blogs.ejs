<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

<body>

    <%- 
        include('../partials/header.ejs')
    %>



    <main class="main">
        <h1 class=".heading heading--large">
            Blogs
        </h1>
        <a href="/blogs/create-post">+ New Post</a>

        <% if (blogs.length > 0)  { %>
        <% blogs.forEach(element => { %>
        <article class="post">
            <div class="post__title">
                <a href="/blogs/<%= element.id %>">
                    <h3 class=".heading heading--regular">
                        <%= element.title %>
                    </h3>
                    <p>
                        <%= element.createdAt %>
                    </p>

                </a>
            </div>
            <div class="post__body">
                <%= element.snippet %>
            </div>
        </article>
        <% }); %>
        <% } else { %>
        <article>
            <h3>
                No posts
            </h3>
        </article>
        <% } %>
    </main>
    <%- 
    include('../partials/footer.ejs')
    %>
</body>

</html>